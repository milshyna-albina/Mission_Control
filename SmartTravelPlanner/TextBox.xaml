<UserControl x:Class="SmartTravelPlanner.TextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartTravelPlanner"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="250">
    <Grid>
        <Border CornerRadius="10" BorderThickness="3" BorderBrush="#7D619B" Background="White">
            <Grid>
                <TextBox x:Name="txtInput" VerticalContentAlignment="Center" Background="Transparent"
                 TextChanged="txtInput_TextChanged" BorderThickness="0" Padding="4,0,0,0" />
                <TextBlock x:Name="tbPlaceholder" Text="{Binding Placeholder}" FontSize="25" FontWeight="Light" 
                   Foreground="#604184" VerticalAlignment="Center" Margin="5,0,0,0"
                   Panel.ZIndex="-1"/>
                <Button x:Name="btnClear" Width="50" Height="30" HorizontalAlignment="Right" 
                    Background="Transparent" BorderThickness="0" Click="btnClear_Click"
                    Focusable="False" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <ContentPresenter/>
                        </ControlTemplate>
                    </Button.Template>
                    <Image Source="/images/delete.png" Stretch="Uniform" Width="40" Height="40"/>
                </Button>
            </Grid>
        </Border>
    </Grid>
</UserControl>
